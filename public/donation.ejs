<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donation History</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script defer src="/js/index.min.js"></script>
    <script defer src="\js/donation.js"></script>
    <script defer src="\js/banner.js"></script>
    <script defer src="js/header.js"></script>
    <link rel="stylesheet" href="css/template/template.css">
    <link rel="stylesheet" href="css/template/banner.css">
    <link rel="stylesheet" href="css/template/header.css">
    <link rel="stylesheet" href="css/template/footer.css">
    <link rel="stylesheet" href="css/donation.css">
</head>

<body>
    <canvas id="donationConfetti"></canvas>
    <header id="header">
        <%- include("./template/header") %>
            <button id="clearConfettiButton">Clear Confetti</button>
    </header>
    <div id="banner">
        <%- include("./template/banner") %>
    </div>

    <br>
    <br>
    <!-- neil -->
    <form onsubmit="event.preventDefault(); populateHistory();" id="insertEventForm">
        <h2>Fill in Donation Event</h2><br>
        <div class="container">
            <div class="row">
                <div class="col-25">
                    <label class="formLabel" for="charityName">Charity Name:</label>
                </div>
                <div class="col-75">
                    <input type="text" id="charityName" name="charityName" placeholder="Enter Charity's Name" required>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label class="formLabel" for="dateDonated">Date Donated:</label>
                </div>
                <div class="col-75">
                    <input type="date" id="dateDonated" name="dateDonated" required>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label class="formLabel" for="amountDonated">Amount Donated:</label>
                </div>
                <div class="col-75">
                    <span id="dollar">$</span>
                    <input type="number" name="amountDonated" id="amountDonated" placeholder="0.00" min="0.05"
                        step="0.01" required>
                </div>
            </div>
            <br>
            <div class="row">
                <input type="submit" value="Submit" id="submitButton">
            </div>
        </div>
    </form>


    <main>
        <br><br><br><br>
        <h2>Donation History</h2>
        <br>
        <table id="eventContainer">
            <tr>
                <th>Charity Name</th>
                <th>Date Donated</th>
                <th>Amount Donated</th>
            </tr>
        </table>
    </main>
    <footer id="footer">
        <%- include("./template/footer") %>
    </footer>
</body>

</html>